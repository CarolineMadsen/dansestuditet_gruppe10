<style>
  /* mobileview */
  @media (max-width: 800px) {
    #portraitsection {
      background-color: var(--background-color-secondary);
      padding: 40px;
      overflow: hidden;
    }
    h2 {
      color: var(--Text-color-white);
      text-align: center;
      font-family: DansestudietDisplay1;
      font-size: 39.06px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
    }
    #portrait_videos {
      display: grid;
      justify-content: center;
      margin-top: 40px;
      gap: 40px;
    }
  } /* web */
  @media (min-width: 800px) {
    #portraitsection {
      background-color: var(--background-color-secondary);
      padding: 40px;
      display: grid;
      grid-template-columns: 1fr, 1fr, 1fr;
      justify-content: center;
      justify-content: center;
      margin-top: 40px;
      gap: 40px;
      overflow: hidden;
    }
    h2 {
      color: var(--Text-color-white);
      text-align: center;
      font-family: DansestudietDisplay1;
      font-size: 39.06px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
    }
  }
</style>
