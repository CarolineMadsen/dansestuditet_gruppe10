  <style>
    h3 {
      color: var(--Text-color-petroleum);
    }

    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 32px 0;
    }
    .undervisere_karusell {
      display: flex;
      overflow: scroll;
      align-items: top;
      justify-content: space-between;
      gap: 10px;
      padding-top: 30px;
      padding-bottom: 30px;
      width: 100vw;
    }
    .undervisere_billede {
      max-width: 150px;
      max-width: 150px;
    }
    .undervisere_navn {
      font-family: Promt;
      font-size: 16px;
      text-align: center;
    }

    hr {
      height: 2px;
      border-width: 0;
      color: var(--SeperatorLine-color-yellow);
      background-color: var(--SeperatorLine-color-yellow);
    }

    /* ----------- Desktop size ----------- */
    @media (min-width: 600px) {
      h2 {
        font-size: 40px;
      }

      .undervisere_karusell {
        display: flex;
        overflow: scroll;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        padding-top: 30px;
        padding-bottom: 30px;
      }
      .undervisere_billede {
        max-width: 200px;
        max-width: 200px;
      }
      .undervisere_navn {
        font-family: Promt;
        font-size: 16px;
        text-align: center;
      }

      hr {
        height: 2px;
        border-width: 0;
        color: var(--SeperatorLine-color-yellow);
        background-color: var(--SeperatorLine-color-yellow);
      }
    }

    @media (min-width: 991px) {
      .content {
        padding-top: 80px;
        padding-bottom: 80px;
      }
    }
  </style>
