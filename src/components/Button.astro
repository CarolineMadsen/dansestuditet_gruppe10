---
import "../styles/global.css";

const { variant } = Astro.props;
---

<button class={variant}>
  <slot />
</button>

<style>
  .primary {
    background-color: var(--Button-secondary-background-color);
    border-radius: 25px;
    padding: 10px 20px 10px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }
  .secondary {
    border-radius: 25px;
    padding: 10px 20px 10px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    background-color: var(--Button-secondary-background-color);
  }
</style>