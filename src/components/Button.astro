---
const { variant, size, buttonLabel } = Astro.props;
---

<div id="Button" button-variant={variant} size-variant={size}>
  <a href="#" Label-color={variant} class="button_label">{buttonLabel}</a>
  <!-- Denne mÃ¥neds Workshop -->
</div>

<style>
  #Button {
    display: flex;
    padding: 10px 10px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 25px;
    margin: 0 4px 4px;
    width: fit-content;
  }
  .button_label {
    font-family: DansestudietDisplay1;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-align: center;
    text-decoration: none;
  }
  #Button:hover .button_label {
    color: var(--Text-color-black);
  }

  /* #Button:hover {
    background: var(--Button-primary-background-color-yellow);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-yellow);
  } */
  /* ----------- Desktop size ----------- */
  @media (min-width: 600px) {
    #Button {
      padding: 10px 20px;
    }
    .button_label {
      font-size: 24px;
    }
  }

  /* ----------- Variants ----------- */

  /* Primary Red */
  [button-variant="primaryRed"] {
    background: var(--Button-primary-background-color-red);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-red);
  }

  [Label-color="primaryRed"] {
    color: var(--Text-color-white);
  }

  [button-variant="primaryRed"]:hover {
    background: var(--Button-primary-background-color-hover);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-yellow);
  }

  /* Primary Petroleum */
  [button-variant="primaryPetroleum"] {
    background: var(--Button-primary-background-color-petroleum);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-petroleum);
  }
  [Label-color="primaryPetroleum"] {
    color: var(--Text-color-white);
  }

  [button-variant="primaryPetroleum"]:hover {
    background: var(--Button-primary-background-color-hover);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-yellow);
  }

  /* Secondary Petroleum */
  [button-variant="secondaryRed"] {
    border: 2px solid var(--Button-primary-background-color-red);
    background: var(--Button-secondary-background-color);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-red);
  }
  [Label-color="secondaryRed"] {
    color: var(--Text-color-black);
  }

  [button-variant="secondaryRed"]:hover {
    background: var(--Button-secondary-background-color-hover);
    border: 2px solid var(--Button-primary-background-color-hover);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-yellow);
  }

  /* Secondary Petroleum */
  [button-variant="secondaryPetroleum"] {
    border: 2px solid var(--Button-primary-background-color-petroleum);
    background: var(--Button-secondary-background-color);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-petroleum);
  }
  [Label-color="secondaryPetroleum"] {
    color: var(--Text-color-black);
  }

  [button-variant="secondaryPetroleum"]:hover {
    background: var(--Button-secondary-background-color-hover);
    border: 2px solid var(--Button-primary-background-color-hover);
    box-shadow: 0px 4px 4px 0px var(--Dropshadow-yellow);
  }
</style>
