---
import "../styles/global.css";
import Button from "./Button.astro";
---

<section id="DanceStylesSection">
  <hr />
  <div class="DanceStyle-Content">
    <div class="text">
      <p class="focusText">Hvilke danse- og træningstyper har vi?</p>
      <div class="danse_navne">
        <p class="scrollText">Experimental Contemporay</p>
        <p class="scrollText">Afro</p>
        <p class="scrollText">House</p>
        <p class="scrollText">Street Jazz</p>
        <p class="scrollText">Commercial Femme</p>
        <p class="scrollText">Hip Hop</p>
        <p class="scrollText">Ballet</p>
        <p class="scrollText">Moderne Dans</p>
        <p class="scrollText">Smidighedstræning</p>
        <p class="scrollText">Breakdance</p>
        <p class="scrollText">Fusion Contemporary</p>
        <p class="scrollText">Yoga</p>
        <p class="scrollText">Waacking</p>
        <p class="scrollText">Workshops m.m</p>
      </div>
      <p class="focusText">Vi har mere end 50 danseklasser om ugen for alle aldre og niveauer!</p>
    </div>
    <div class="knap">
      <Button buttonLabel="Se underviserne her" variant="primaryPetroleum" />
    </div>
  </div>
</section>

<style>
  #DanceStylesSection {
    height: fit-content;
    background-color: var(--Background-color-secondary-blue);
    text-align: center;
    justify-items: center;
    width: 100vw;
  }

  .DanceStyle-Content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 56px 0;
    gap: 20px;
  }
  .danse_navne {
    display: flex;
    overflow: scroll;
    flex-direction: column;
    justify-content: space-between;
    gap: 10px;
    margin: 20px;
    height: 28px;
    /* padding-top: 30px;
    padding-bottom: 30px;
    height: 10px; */
  }

  .scrollText {
    font-family: DansestudietDisplay1;
    font-size: 24px;
    line-height: 28px;
    /* line-height: 80px; */
    color: var(--Text-color-petroleum);
  }

  .focusText {
    color: white;
    font-family: "Promt";
    margin: 0 30px;
  }
  hr {
    height: 2px;
    border-width: 0;
    color: var(--SeperatorLine-color-yellow);
    background-color: var(--SeperatorLine-color-yellow);
  }
  /* ----------- Desktop size ----------- */
  @media (min-width: 600px) {
    .danse_navne {
      height: 80px;
      gap: 20px;
    }
    .scrollText {
      font-family: DansestudietDisplay1;
      font-size: 64px;
      line-height: normal;
      color: var(--Text-color-petroleum);
    }

    .focusText {
      color: white;
      font-family: "Promt";
      font-size: 1 rem;
    }
  }

  @media (min-width: 991px) {
    .DanceStyle-Content {
      padding-top: 80px;
      padding-bottom: 80px;
    }
  }
</style>
