---
const { headline, type } = Astro.props;
import "../styles/global.css";
---

<div id="SectionHeadlineBanner" background-variant={type}>
  <h2 headline-variant={type}>{headline}</h2>
  <!-- Denne måneds Workshop -->
</div>

<style>
  #SectionHeadlineBanner {
    display: flex;
    padding: 20px;
    justify-content: center;
    align-items: center;
    align-self: stretch;
  }

  h2 {
    text-align: center;

    /* Overskrifter */
    font-family: DansestudietDisplay1;
    font-size: 27.65px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  /* ----------- Desktop size ----------- */
  @media (min-width: 600px) {
    h2 {
      font-size: 39.06px;
    }
  }

  /* ---------- Variants ---------- */
  /* månedens workshop */
  [background-variant="MW"] {
    background: var(--background-color-gray);
  }
  [headline-variant="MW"] {
    color: var(--Text-color-red);
  }
  /* lab */
  [background-variant="Lab"] {
    background: var(--background-color-lightblue);
  }
  [headline-variant="Lab"] {
    color: var(--Text-color-petroleum);
  }
</style>
